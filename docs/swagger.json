{
    "swagger": "2.0",
    "info": {
        "description": "API em Go para cotações de moedas (com fallback de provider).",
        "title": "Go Currency API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/v1/rates": {
            "get": {
                "description": "Retorna cotações para os símbolos informados a partir da moeda base.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "rates"
                ],
                "summary": "Cotação de moedas",
                "parameters": [
                    {
                        "type": "string",
                        "default": "BRL",
                        "description": "Moeda base",
                        "name": "base",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "default": "USD,EUR",
                        "description": "Moedas alvo separadas por vírgula",
                        "name": "symbols",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "502": {
                        "description": "Bad Gateway",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    }
                }
            }
        }
    }
}